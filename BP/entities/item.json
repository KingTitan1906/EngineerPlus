{
    "format_version": "1.21.50",
    "minecraft:entity": {
        "description": {
            "identifier": "engineerplus:item",
            "is_experimental": false,
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "enum:type": {
                    "type": "enum",
                    "values": ["item", "block"],
                    "default": "item",
                    "client_sync": true
                }
            }
        },
        "component_groups": {
            "system:despawn": {
                "minecraft:instant_despawn": {}
            }
        },
        "components": {
            "minecraft:behavior.equip_item": {
                "priority": 0
            },
            "minecraft:equip_item": {},
            "minecraft:inventory": {
                "container_type": "container",
                "inventory_size": 1,
                "private": true,
                "restrict_to_owner": false
            },
            "minecraft:collision_box": {
                "height": 0.2,
                "width": 0.2
            },
            "minecraft:interact": {
                "interactions": [
                    {}
                ]
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": "no"
                    },
                    {
                        "cause": "lava",
                        "deals_damage": "yes",
                        "on_damage": {
                            "event": "system:despawn",
                            "target": "self"
                        }
                    }
                ]
            },
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": true
            }
        },
        "events": {
            "system:despawn": {
                "add": {
                    "component_groups": [
                        "system:despawn"
                    ]
                }
            }
        }
    }
}